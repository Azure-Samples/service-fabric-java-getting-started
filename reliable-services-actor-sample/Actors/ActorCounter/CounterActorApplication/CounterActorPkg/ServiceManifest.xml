    <Description>Service that implements a actor counter service</Description>
    <ServiceTypes>
    <StatefulServiceType ServiceTypeName="CounterActorServiceType" HasPersistedState="true" />
    </ServiceTypes>
    <CodePackage Name="Code" Version="1.0.0">        
        <EntryPoint>
            <ExeHost>
              <!-- For Linux it would be .sh -->
              <Program>sample.sh</Program>
              <!-- For Windows it would be .bat -->
              <!--<Program>sample.bat</Program> -->
            </ExeHost>
        </EntryPoint>
    </CodePackage>
    <ConfigPackage Name="Config" Version="1.0.0" />
    <DataPackage Name="Data" Version="1.0.0" />
    <Resources>
      <Endpoints>
         <Endpoint Name="CounterActorServiceEndpoint" />
         <Endpoint Name="CounterActorServiceReplicatorEndpoint" />
      </Endpoints>
   </Resources>
